<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/_30sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:padding="@dimen/_10sdp"
        android:text="Set Wallpaper On"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onlyLock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lock Screen"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:padding="@dimen/_15sdp"
        android:textAlignment="center"
        android:background="@color/main_color_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />


    <TextView
        android:id="@+id/onlyHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Screen"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_15sdp"
        android:textAlignment="center"
        android:background="@color/main_color_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onlyLock" />

    <TextView
        android:id="@+id/both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Both Home and Lock"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_15sdp"
        android:textAlignment="center"
        android:background="@color/main_color_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onlyHome" />


</androidx.constraintlayout.widget.ConstraintLayout>